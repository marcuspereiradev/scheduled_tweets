<h1>Sign in</h1>

<%= form_with url: sign_in_path do |form| %>
  <div class="mb-3">
    <%= form.label :Email %>
    <%= form.text_field :email, placeholder: "exemple@exemple.com", class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :Password %>
    <%= form.password_field :password, placeholder: :password, class: "form-control" %>
    <%= link_to 'Forgot your password?', password_reset_path %>
  </div>
  <div class="mb-3">
    <%= form.submit "Sign in", class: "btn btn-primary" %>
  </div>
<% end %>
