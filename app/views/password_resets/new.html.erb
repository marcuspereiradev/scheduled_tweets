<h1>Forgot your password?</h1>

<%= form_with url: password_resets_path do |form| %>
  <div class="mb-3">
    <%= form.label :Email %>
    <%= form.text_field :email, placeholder: "exemple@exemple.com", class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Reset Password", class: "btn btn-primary" %>
  </div>
<% end %>
